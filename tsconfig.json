{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es2017"],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": ["node"],
        "typeRoots": [
            "./src/types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
